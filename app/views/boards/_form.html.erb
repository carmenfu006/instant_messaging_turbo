<%= form_with(model: board, data: { action: "turbo:submit-end->board#create" }) do |f| %>
  <%= render partial: 'shared/error', locals: { object: board } %>
  <%= f.text_field :name %>
  <%= f.submit 'save' %>
<% end %>


