<h1>New Message</h1>

<%= turbo_frame_tag 'new_message' do %>
  <%= form_with(model: [@message.room, @message], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.text_field :content %>
    <%= f.submit 'Send'%>
  <% end %>
<% end %>

<% link_to 'Back', @message.room %>